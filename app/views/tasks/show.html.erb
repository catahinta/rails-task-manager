<h1><%= @task.title %></h1>
<p><%= @task.details %></p>

<% if @task.completed %>
  <input type="checkbox" checked><p>This task is completed</p>
<% else %>
  <input type="checkbox"><p>This task is not completed yet</p>
<% end %>

<%= link_to 'Edit this task', edit_path %>

<br>

<%= link_to 'Delete this task', delete_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

<%= link_to 'Delete this task', delete_path(@task), method: 'DELETE' %>

<br>

<%= link_to 'Back to list', index_path %>
