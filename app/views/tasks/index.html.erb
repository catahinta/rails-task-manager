<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <% if task.completed %>
      <li><i class="fa-regular fa-square-check"></i><%= link_to task.title, task_path(task) %></li>
    <% else %>
      <li><i class="fa-regular fa-square"></i><%= link_to task.title, task_path(task) %></li>
    <% end %>
  <% end %>
</ul>

<%= link_to 'Add a new task', new_task_path %>
